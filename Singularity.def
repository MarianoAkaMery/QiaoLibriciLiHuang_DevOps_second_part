Bootstrap: docker
From: ubuntu:24.04

%post
    # Only the C++ runtime is needed to run the pre‑built binary
    apt-get update && apt-get install -y --no-install-recommends \
        libstdc++6 \
        && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy the executable that CI just built.
# It lives in build/ once ./build.sh completes.
%files
    build/convert_grayscale /usr/local/bin/convert_grayscale

%runscript
    # Make the image directly runnable – pass any CLI args through.
    exec /usr/local/bin/convert_grayscale "$@"
