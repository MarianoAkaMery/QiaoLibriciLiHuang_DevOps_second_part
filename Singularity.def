Bootstrap: docker
From: ubuntu:22.04

%labels
    Author "Yibo"
    Version "1.0"

%post
    echo "🧱  Installing system deps …"
    apt-get update && apt-get install -y \
        build-essential cmake git libgtest-dev \
        && rm -rf /var/lib/apt/lists/*

    echo "⚙️  Building GoogleTest manually …"
    cd /usr/src/gtest
    cmake -DCMAKE_CXX_FLAGS="-fPIC" .
    make -j$(nproc)
    cp lib/*.a /usr/lib

    echo "📦  Copying application sources …"
    mkdir -p /opt/app
    cp -r /opt/app_src/* /opt/app/

    echo "🔨  Configuring & compiling application …"
    cd /opt/app
    chmod +x build.sh
    ./build.sh            # produces build/convert_grayscale & build/test_grayscale

%files
. /opt/app_src           # context from the repo pushed by the GH runner

%environment
    export PATH=/opt/app/build:$PATH   # make binaries callable directly

%runscript
    # Default action inside the container -> run the converter with passed args
    echo "🚀  Running convert_grayscale inside container …"
    exec /opt/app/build/convert_grayscale "$@"
