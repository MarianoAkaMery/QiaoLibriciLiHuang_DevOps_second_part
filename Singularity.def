Bootstrap: docker
From: ubuntu:22.04

%labels
    Author "yibo"
    Version "0.1"

%files
. /opt/app

%post
    apt-get update && apt-get install -y \
        build-essential \
        cmake \
        libgtest-dev \
        && rm -rf /var/lib/apt/lists/*

%environment
    export PATH=/opt/app:$PATH

%runscript
    echo "Container is ready. You are inside /opt/app"
    exec bash
