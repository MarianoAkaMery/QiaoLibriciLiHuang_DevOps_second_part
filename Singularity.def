Bootstrap: docker
From: ubuntu:22.04 

%labels
    Author "MeryAkaMariano"
    Version "1.0.0"

%post
    # download  tools
    echo "APT update with retry..."
    for i in 1 2 3; do
        apt-get update && break || sleep 5
    done

    apt-get install -y \
        build-essential \
        cmake \
        git \
        libgtest-dev \
        && rm -rf /var/lib/apt/lists/*

    # build Gtest library
    cd /usr/src/gtest
    cmake -DCMAKE_CXX_FLAGS="-fPIC" .
    make
    cp lib/*.a /usr/lib

    # build the context
    mkdir -p /opt/app/build

    # cmake the project
    cd /opt/app/build
    cmake ..
    make

%files
. /opt/app  

%environment
    export PATH=/opt/app/build:$PATH

%runscript
    exec /opt/app/build/convert_grayscale "$@"
